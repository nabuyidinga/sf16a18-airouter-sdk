+/*
+ * Modified by nevermore, set wifi deauth/disassoc reason.
+ * Now completed by writing a non-zero value to /tmp/wds_$macaddr.
+ */
+static int set_wds_connect_status(const unsigned char *addr, int reason)
+{
+	FILE *fp;
+	char mac_buf[20];
+	char filename[32] = "/tmp/wds_";
+
+	if (addr == NULL)
+		return 0;
+
+	sprintf(mac_buf, "%02X:%02X:%02X:%02X:%02X:%02X", MAC2STR(addr));
+	strcat(filename, mac_buf);
+	fp = fopen(filename, "w+");
+	if (reason == WLAN_REASON_MICHAEL_MIC_FAILURE)
+		fwrite("2\n", 1, 2, fp);
+	else
+		fwrite("1\n", 1, 2, fp);
+	fclose(fp);
+
+	return 0;
+}
